# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=blue_escape_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=blue_escape_db

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_minimum_32_characters
JWT_REFRESH_SECRET=your_very_long_and_secure_refresh_secret_here_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@blueescape.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Database Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *
